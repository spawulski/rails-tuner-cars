<nav class="navbar navbar-expand-lg navbar-dark bg-primary justify-content-between">
  <a class="navbar-brand" href="/listings/index"><strong>Super Sweet Japanese Tuner Cars For Sale</strong></a>

   <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/about">About</a>
      </li>
    </ul>

  <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline'} do |f| %>
    <%= f.input :title, include_blank: true, class: "form-control mr-sm-2", input_html: {value: ""} %>
    <%= f.submit "Search", class: "btn btn-secondary my-2 my-sm-0" %>
  <% end %>
</nav>
<div class="container-fluid bg-light">
  <p>
    <strong>Total number of listings from BC to Ontario: </strong>
    <%= @count %>
  </p>
  <h1>Makes</h1>
  <% @makes.each do |make| %>
    <h3><%=link_to make.name.humanize, make%></h3>
  <% end %>
  <h1>Models</h1>
  <% @models.each do |model| %>
    <h3><%=link_to model.name.humanize, model%></h3>
  <% end %>
  <h2>Listings:</h2>

  <div class="container bg-secondary">
  <%= paginate @listings %>
  <% @listings.each do |listing| %>
    <div class="container bg-white">

    <h3>Listing: <%= listing.title.humanize%></h3>
    <p>
      <strong>Make: </strong>
      <%= link_to listing.make.name, listing.make %>
    </p>
    <p>
      <strong>Model: </strong>
      <%= link_to listing.model.name, listing.model %>
    </p>
    <img src="<%= listing.image_url %>" alt="<%= listing.model.name %>">
    <p>
      <strong>Description: </strong>
      <%= listing.description.humanize %>
    </p>
    <p>
      <strong>Price: </strong>
      <%= number_to_currency(listing.price) %>
    </p>
    <p>
      <strong>Location: </strong>
      <%= listing.location.humanize %>
    </p>
    <p>
      <strong>Link to car: </strong>
      <%= link_to listing.model.name, listing %>
    </p>
    <p>
      <strong>Link to full listing on Kijiji: </strong>
      <%= link_to listing.url, listing.url %>
    </p>
    </div>
  <% end %>
  <%= paginate @listings %>
  </div>
  </div>


